<!DOCTYPE html>
<html>
  <%- include("../partials/header.ejs") %>
  <%- include("../partials/nav.ejs") %>
    <!-- TODO: implement feature to visit user profile -->
  <body>
    <h3>Followers:</h3>
    <div class="followers content">
        <% if (followers && followers.length > 0) { %>
          <% followers.forEach(user => { %>
            <div class="left">
              <% if (user.profilePicture) { %>
                <img class='user-pfp' src="<%= user.profilePicture %>" alt="">
              <% } %>
            </div>
            <div class="right">
              <h3><%= user.username %></h3>
              <p>Member since: <%= new Date(user.memberSince).toLocaleString() %></p>
            </div>
          <% }) %>
        <% } else { %>
          You have no followers
        <% } %>
    </div>
  </body>
  
  <%- include("../partials/footer.ejs") %>

</html>
