<!DOCTYPE html>
<html>
  <%- include("../partials/header.ejs") %>
  <%- include("../partials/nav.ejs") %>
    <!-- TODO: implement unfollow feature -->
    <!-- TODO: implement feature to visit user profile -->
  <body>
    <h3>Following:</h3>
    <div class="followings content">
        <% if (followings && followings.length > 0) { %>
          <% followings.forEach(user => { %>
            <div class="left">
              <% if (user.profilePicture) { %>
                <img class='user-pfp' src="<%= user.profilePicture %>" alt="">
              <% } %>
            </div>
            <div class="right">
              <h3><%= user.username %></h3>
              <p>Member since: <%= new Date(user.memberSince).toLocaleString() %></p>
            </div>
          <% }) %>
        <% } else { %>
          You are not following anyone
        <% } %>
    </div>
  </body>
  
  <%- include("../partials/footer.ejs") %>

</html>
